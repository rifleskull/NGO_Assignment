<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.awaazngo.DashBoardFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="307dp"
        android:background="@drawable/logo2"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="19dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="AWAAZ NGO : A VOICE FOR CHANGE \n\nFounded by Mr.Karanjeet Malik is a National Level Working Non Governmental Organization Registered Under Society Registration Act, 1860 having Head Office in Bulandshahr, Uttarpradesh. Awaaz Ngoâ€™s main focus is on Social Service and Social Awareness. We work and serve for a better world where everyone can live happily and with smiling Face. We feel happy in helping others and want to become helping hand of society."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Members And Professionals"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <HorizontalScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="351dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="385dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="426dp">

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ankit" />


                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="150dp"
                    android:src="@drawable/vaibhav" />
                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="150dp"
                    android:src="@drawable/anirudh" />

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="150dp"
                    android:src="@drawable/vish" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
